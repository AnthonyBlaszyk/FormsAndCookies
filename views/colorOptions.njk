{% extends "layout.njk" %}

{% block content %}
  <form action="/handleColor-form" method="POST" class="form">
    <div>
      <label>Classic background</label>
      <input type="radio" name="classic">
    </div>

    <div>
      <label>Purple background</label>
      <input type="radio" name="purple">
    </div>

    <div>
      <label>Green background</label>
      <input type="radio" name="green">
    </div>

    <button type="submit">Submit</button>
  </form>
{% endblock %}
