{% extends "layout.njk" %}

{% block content %}
  <form action="/handle-form" method="POST" class="form">

    <div>
      <label>Light cookie</label>
      <input type="radio" value="lightMode" name="cookie">
    </div>

    <div>
      <label>Dark cookie</label>
      <input type="radio" value="darkMode" name="cookie" >
    </div>

    <div>
      <label>Eat the cookie</label>
      <input type="radio" value="deleteCookie" name="cookie">
    </div>

    <button type="submit">Submit</button>
  </form>

{% endblock %}
